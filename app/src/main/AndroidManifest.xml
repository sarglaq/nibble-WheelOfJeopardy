<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nibble.wheelofjeopardy">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/nibble"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/nibble"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.NewGameActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.WheelActivity"
            android:label="@string/title_activity_wheel"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.QuestionActivity"
            android:label="@string/title_activity_question_board"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.AnswerActivity"
            android:label="@string/title_activity_answer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.GameOverActivity" />
        <activity
            android:name=".ui.QuestionListActivity"
            android:label="@string/title_question_list"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".ui.QuestionDetailActivity"
            android:label="@string/title_question_detail"
            android:parentActivityName=".ui.QuestionListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nibble.wheelofjeopardy.ui.QuestionListActivity" />
        </activity>
    </application>

</manifest>